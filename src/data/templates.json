  "title": "Salary Slip",
  "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Salary Slip</title>\n    <style>\n        .salary-slip-container {\n            font-family: Arial, sans-serif;\n            margin:auto;\n            padding: 0;\n            \n        }\n        .salary-slip {\n            width: 800px;\n            margin: 0 auto;\n            padding: 20px;\n            background: #fff;\n            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\n        }\n        .salary-slip .header {\n            display: flex;\n            justify-content: space-between;\n            margin-bottom: 20px;\n            font-size: 14px;\n        }\n        .salary-slip .header .company {\n            text-align: left;\n        }\n        .salary-slip .header .company strong {\n            font-size: 16px;\n        }\n        .salary-slip .header .details {\n            text-align: right;\n        }\n        .salary-slip table {\n            width: 100%;\n            border-collapse: collapse;\n            margin-top: 10px;\n            font-size: 12px;\n        }\n        .salary-slip table, .salary-slip th, .salary-slip td {\n            border: 1px solid #ddd;\n        }\n        .salary-slip th, .salary-slip td {\n            padding: 8px;\n            text-align: left;\n        }\n        .salary-slip th {\n            background-color: #f4f4f4;\n        }\n        .salary-slip .footer {\n            margin-top: 20px;\n            font-size: 12px;\n            text-align: center;\n            color: #555;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"salary-slip-container\">\n        <div class=\"salary-slip\">\n            <div class=\"header\">\n                <div class=\"company\">\n                    <strong>{{company.name}}</strong><br>\n                    {{company.address}}<br>\n                    {{company.city}}, {{company.state}} - {{company.zip}}<br>\n                    Email: {{company.email}} | Phone: {{company.phone}}<br>\n                </div>\n                <div class=\"details\">\n                    <strong>Salary Slip for the Month of [month] - [year]</strong><br>\n                    Employee ID: [employee_id]<br>\n                    Name: [employee_name]<br>\n                    Designation: [employee_designation]<br>\n                    PAN: [employee_pan]<br>\n                    Aadhaar: [employee_aadhaar]<br>\n                </div>\n            </div>\n\n            <table>\n                <tr>\n                    <th>Bank Name</th>\n                    <td>[employee_bank_name]</td>\n                    <th>Bank A/C Number</th>\n                    <td>[employee_bank_account]</td>\n                </tr>\n                <tr>\n                    <th>DOJ</th>\n                    <td>[employee_doj]</td>\n                    <th>Payable Days</th>\n                    <td>[payable_days]</td>\n                </tr>\n                <tr>\n                    <th>Leave Taken</th>\n                    <td>[leave_taken]</td>\n                    <th>Late Marks</th>\n                    <td>[late_marks]</td>\n                </tr>\n                <tr>\n                    <th>Loss of Pay (LOP)</th>\n                    <td>[loss_of_pay]</td>\n                    <th>Mode of Salary</th>\n                    <td>[mode_of_salary]</td>\n                </tr>\n                <tr>\n                    <th>Location/Unit</th>\n                    <td colspan=\"3\">[location]</td>\n                </tr>\n            </table>\n\n            <table>\n                <thead>\n                    <tr>\n                        <th>Head</th>\n                        <th>Rate</th>\n                        <th>Earned Amount</th>\n                        <th>Deduction</th>\n                        <th>Amount</th>\n                    </tr>\n                </thead>\n                <tbody>\n                    <tr>\n                        <td>Basic Salary</td>\n                        <td>[basic_salary_rate]</td>\n                        <td>[basic_salary]</td>\n                        <td>PF</td>\n                        <td>[pf_amount]</td>\n                    </tr>\n                    <tr>\n                        <td>HRA</td>\n                        <td>[hra_rate]</td>\n                        <td>[hra]</td>\n                        <td>PT</td>\n                        <td>[pt_amount]</td>\n                    </tr>\n                    <tr>\n                        <td>Conveyance Allowance</td>\n                        <td>[conveyance_rate]</td>\n                        <td>[conveyance]</td>\n                        <td>TDS</td>\n                        <td>[tds_amount]</td>\n                    </tr>\n                    <tr>\n                        <td>Medical Allowance</td>\n                        <td>[medical_rate]</td>\n                        <td>[medical]</td>\n                        <td>ESI</td>\n                        <td>[esi_amount]</td>\n                    </tr>\n                    <tr>\n                        <td>Shift Allowance</td>\n                        <td>[shift_rate]</td>\n                        <td>[shift_allowance]</td>\n                        <td colspan=\"2\"></td>\n                    </tr>\n                    <tr>\n                        <td>Mobile Allowance</td>\n                        <td>[mobile_rate]</td>\n                        <td>[mobile_allowance]</td>\n                        <td colspan=\"2\"></td>\n                    </tr>\n                    <tr>\n                        <td>Other Allowance</td>\n                        <td>[other_rate]</td>\n                        <td>[other_allowance]</td>\n                        <td>Advance Taken</td>\n                        <td>[advance_taken]</td>\n                    </tr>\n                    <tr>\n                        <td>Adv. Against Bonus</td>\n                        <td>[adv_bonus_rate]</td>\n                        <td>[adv_bonus]</td>\n                        <td colspan=\"2\"></td>\n                    </tr>\n                    <tr>\n                        <td colspan=\"2\"><strong>Total</strong></td>\n                        <td>[total_earned]</td>\n                        <td><strong>Total Deductions</strong></td>\n                        <td>[total_deductions]</td>\n                    </tr>\n                </tbody>\n            </table>\n\n            <table>\n                <tr>\n                    <th>Arrears/Incentives</th>\n                    <td>[arrears_incentives]</td>\n                    <th>Salary Payable</th>\n                    <td>[salary_payable]</td>\n                </tr>\n                <tr>\n                    <th colspan=\"2\">Net Salary</th>\n                    <td colspan=\"2\">[net_salary]</td>\n                </tr>\n            </table>\n\n            <div class=\"footer\">\n                © {{company.year}} {{company.name}}. All rights reserved.\n            </div>\n        </div>\n    </div>\n</body>\n</html>"
}

